# 1. プロバイダーの設定（Google Cloudを使うことを宣言）
provider "google" {
  project = "YOUR_PROJECT_ID" # ご自身のプロジェクトIDに書き換えてください
  region  = "asia-northeast1" # 東京リージョン
  zone    = "asia-northeast1-a"
}

# 2. VPCネットワークの作成
resource "google_compute_network" "vpc_network" {
  name = "terraform-network"
}

# 3. 仮想マシン（Compute Engine）の作成
resource "google_compute_instance" "vm_instance" {
  name         = "terraform-instance"
  machine_type = "f1-micro" # 最も安価なマシンタイプ

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-11" # OSの指定
    }
  }

  network_interface {
    network = google_compute_network.vpc_network.name
    access_config {
      # 空のブロックを入れることで外部IPアドレスを付与
    }
  }
}
